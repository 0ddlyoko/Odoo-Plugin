<idea-plugin>
    <id>me.oddlyoko.odoo</id>
    <name>Odoo</name>
    <vendor email="nathangiaco@hotmail.com" url="https://0ddlyoko.be">Giacomello Nathan</vendor>

    <description><![CDATA[
    Plugin used to fastly create odoo plugin
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.python</depends>

    <applicationListeners>
    </applicationListeners>

    <extensions defaultExtensionNs="com.intellij">
        <fileBasedIndex implementation="me.oddlyoko.odoo.modules.indexes.OdooModuleIndex" />
        <fileBasedIndex implementation="me.oddlyoko.odoo.modules.indexes.OdooModuleDependencyIndex" />
        <fileBasedIndex implementation="me.oddlyoko.odoo.models.indexes.OdooModelIndex" />

        <psi.referenceContributor implementation="me.oddlyoko.odoo.modules.reference.OdooManifestReferenceContributor" />
        <lang.parserDefinition implementationClass="me.oddlyoko.odoo.python.OdooPythonParserDefinition" language="Python" order="first" />
    </extensions>

    <extensions defaultExtensionNs="Pythonid">
        <importResolver implementation="me.oddlyoko.odoo.modules.OdooModuleResolver" />
        <pyModuleMembersProvider implementation="me.oddlyoko.odoo.modules.OdooModuleAddonsMembersProvider" />
        <inspectionExtension implementation="me.oddlyoko.odoo.highlighting.OdooPyInspectionExtension" />
    </extensions>
</idea-plugin>
