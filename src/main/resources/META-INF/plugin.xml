<idea-plugin url="https://github.com/0ddlyoko/Odoo-Plugin">
    <id>me.oddlyoko.odoo</id>
    <name>Odoo Support</name>
    <vendor email="nathangiaco@hotmail.com" url="https://0ddlyoko.be">Giacomello Nathan</vendor>

    <description><![CDATA[
    <h1>Odoo Integration for PyCharm</h1>
    <p>
        Provides support for <a href="https://www.odoo.com">Odoo</a>.<br />
        Use this plugin to fastly create odoo module
    </p>
    <p>
        <h2>Features</h2>
        <ul>
            <li>Understand Odoo module</li>
            <li>Code completion for manifest file, python models</li>
        </ul>
    </p>
    <p>
        It's recommended to add odoo and odoo-enterprise in your Project Structure:
        <ol>
            <li>File => Settings...</li>
            <li>Project: ProjectName => Project Structure</li>
            <li>+ Add Content Root</li>
            <li>Add Odoo and odoo enterprise as Content Root Directories</li>
        </ol>
    </p>
    ]]></description>

    <change-notes><![CDATA[
    <ul>
        <li>
            Version alpha 0.0.4
            <ul>
                <li>Use Kotlin instead of Java</li>
            </ul>
        </li>
        <li>
            Version alpha 0.0.3
            <ul>
                <li>Add autocompletion with _name, _inherit and _inherits</li>
                <li>Update to Java 17</li>
                <li>Update to PyCharm version 2022.2</li>
            </ul>
        </li>
        <li>
            Version alpha 0.0.2
            <ul>
                <li>Fix issue with PyCharm version</li>
            </ul>
        </li>
        <li>
            Version alpha 0.0.1
            <ul>
                <li>Odoo Support</li>
                <li>Support for manifest file (depends, data, views)</li>
                <li>Support for <i>from odoo.addons.xxx</i> completion</li>
            </ul>
        </li>
    </ul>
    ]]></change-notes>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.python</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileBasedIndex implementation="me.oddlyoko.odoo.modules.indexes.OdooModuleIndex" />
        <fileBasedIndex implementation="me.oddlyoko.odoo.modules.indexes.OdooModuleDependencyIndex" />
        <fileBasedIndex implementation="me.oddlyoko.odoo.models.indexes.OdooModelIndex" />

        <psi.referenceContributor implementation="me.oddlyoko.odoo.modules.reference.OdooManifestReferenceContributor" />
        <psi.referenceContributor implementation="me.oddlyoko.odoo.models.reference.OdooModelReferenceContributor" />
        <lang.parserDefinition implementationClass="me.oddlyoko.odoo.python.OdooPythonParserDefinition" language="Python" order="first" />

        <psi.treeChangePreprocessor implementation="me.oddlyoko.odoo.modules.listener.OdooModuleModificationListener" />
    </extensions>

    <extensions defaultExtensionNs="Pythonid">
        <importResolver implementation="me.oddlyoko.odoo.modules.OdooModuleResolver" />
        <pyModuleMembersProvider implementation="me.oddlyoko.odoo.modules.OdooModuleAddonsMembersProvider" />
        <inspectionExtension implementation="me.oddlyoko.odoo.highlighting.OdooPyInspectionExtension" />
    </extensions>

